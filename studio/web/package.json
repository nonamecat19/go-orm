{
  "scripts": {
    "build:css": "npx tailwindcss -i src/main.css -o public/assets/main.css",
    "build:js": "npx esbuild src/main.js --bundle --outfile=public/assets/main.js",
    "watch:css": "npm run build:css -- --watch=always",
    "watch:js": "npm run build:js -- --watch=forever"
  },
  "devDependencies": {
    "daisyui": "^4.12.10",
    "esbuild": "0.23.1",
    "tailwindcss": "^3.4.11"
  },
  "dependencies": {
    "htmx.org": "^2.0.2"
  }
}
